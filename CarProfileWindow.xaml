<Window x:Class="CarRegistryProject.CarProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarRegistryProject"
        mc:Ignorable="d"
        Title="CarProfileWindow" Height="520" Width="700">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock x:Name="CarHeaderText"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,6"/>

        <!-- Basic car info -->
        <TextBlock x:Name="CarInfoText"
                   Grid.Row="1"
                   FontSize="13"
                   Margin="0,0,0,12"/>

        <!-- Insurance info area (we’ll add buttons next) -->
        <StackPanel Grid.Row="2" Orientation="Vertical" VerticalAlignment="Top" >

            <GroupBox Header="Insurance (Third-party)" Margin="0,0,0,10">
                <StackPanel Margin="10">

                    <TextBlock x:Name="InsuranceText" Margin="0,0,0,8"/>

                    <!-- Current insurance creation -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                        <DatePicker x:Name="InsuranceStartDatePicker" Width="140"/>
                    </StackPanel>

                    <TextBox x:Name="InsurancePolicyNumberBox"
                     Width="200"
                     Height="26"
                     Margin="0,0,0,8"
                     VerticalContentAlignment="Center"
                     ToolTip="Policy number"/>

                    <ComboBox x:Name="InstallmentPlanBox" Width="200" Margin="0,0,0,8"/>

                    <StackPanel Orientation="Horizontal">
                        <Button Content="Create"
                        Width="120"
                        Margin="0,0,8,0"
                        Click="CreateInsurance_Click"/>

                        <Button Content="Remove"
                        Width="80"
                        Click="RemoveInsurance_Click"/>
                    </StackPanel>

                    <!-- Scheduled renewal -->
                    <Separator Margin="0,10,0,10"/>

                    <TextBlock Text="Scheduled renewal" FontWeight="Bold" Margin="0,0,0,6"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                        <DatePicker x:Name="FutureStartDatePicker" Width="140" Margin="0,0,8,0"/>
                        <ComboBox x:Name="FutureInstallmentPlanBox" Width="200"/>
                    </StackPanel>

                    <TextBox x:Name="FuturePolicyNumberBox"
                     Width="200"
                     Height="26"
                     Margin="0,0,0,8"
                     VerticalContentAlignment="Center"
                     ToolTip="Future policy number"/>

                    <StackPanel Orientation="Horizontal">
                        <Button Content="Save scheduled renewal"
                        Width="170"
                        Margin="0,0,8,0"
                        Click="SaveScheduledRenewal_Click"/>

                        <Button Content="Cancel scheduled renewal"
                        Width="170"
                        Click="CancelScheduledRenewal_Click"/>
                    </StackPanel>

                </StackPanel>
            </GroupBox>

            <GroupBox Header="Comprehensive Insurance" Margin="0,0,0,10">
                <StackPanel Margin="10">
                    <TextBlock x:Name="ComprehensiveText" />
                </StackPanel>
            </GroupBox>

        </StackPanel>
    </Grid>
</Window>
