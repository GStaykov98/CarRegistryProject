<Window x:Class="CarRegistryProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarRegistryProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="12">
    <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <!-- Search bar -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <TextBox x:Name="SearchBox" Width="260" Height="28" Margin="0,0,8,0"
                 VerticalContentAlignment="Center"
                 ToolTip="Search by Name or Government ID"/>
            <Button x:Name="SearchButton" Content="Search" Width="90" Height="28"
                Click="SearchButton_Click"/>
        </StackPanel>

        <!-- Results -->
    <DataGrid x:Name="PeopleGrid" Grid.Row="1"
              AutoGenerateColumns="False"
              IsReadOnly="True"
              SelectionMode="Single"
              SelectionChanged="PeopleGrid_SelectionChanged"
              MouseDoubleClick="PeopleGrid_MouseDoubleClick">
        <DataGrid.Columns>
            <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="80"/>
            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
            <DataGridTextColumn Header="Government ID" Binding="{Binding GovernmentId}" Width="200"/>
        </DataGrid.Columns>
    </DataGrid>
</Grid>

</Window>
